<meta name="robots" content="noindex, nofollow">
<style lang="css">
  header > nav {
    background-image: linear-gradient(135deg, #ff0000 25%, #ffff00 25%, #ffff00 50%, #ff0000 50%, #ff0000 75%, #ffff00 75%, #ffff00 100%) !important;
    background-size: 50px 50px;
  }
</style>
<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function () {
		const today = new Date().toLocaleDateString();
    if (localStorage.getItem('ack') === today) {
      return;
    }
    if (confirm('This is the test site with fake pets. Press Cancel if you want to go to the prod site.')) {
      localStorage.setItem('ack', today);
    } else {
      window.location.replace("https://{{{prod_domain}}}");
    }
  });
</script>
