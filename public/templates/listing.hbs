<html lang="en-US">
<title>{{listingTitle}}</title>
<meta charset="utf-8">
<meta name="robots" content="{{#unless listing.statusConfig.listed}}no{{/unless}}index">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="canonical" href="https://{{public_domain}}/{{listing.path}}">
<link rel="stylesheet" href="/common.css">
<link rel="stylesheet" href="/listing.css">
<script src="/email.js"></script>
{{>header}}
{{#each listing.pets}}{{#if @first}}
<a class="return" href="/{{speciesConfig.plural}}" title="{{speciesConfig.plural}}">
  Return to the {{pluralWithYoung speciesConfig}} page
</a>
{{/if}}{{/each}}
<article class="listing">
  <h2>{{listingName}}</h2>
  <p class="subtitle">
    <span>{{collapsedAge}} old</span>
    &nbsp;&middot;&nbsp;
    <span>{{listing.status}}</span>
    {{#if listing.statusConfig.listed}}
      {{#unless listing.statusConfig.show_status}}
        &nbsp;&middot;&nbsp;
        <span>{{listing.fee}}</span>
      {{/unless}}
    {{/if}}
  <aside class="images">
    {{#each listing.photos}}
      {{>photo link='true' height='480'}}
    {{/each}}
  </aside>
  <section id="description">
    {{{listing.renderedDescription}}}
    {{#unless listing.statusConfig.show_status}}
      <form action="/application" method="GET" id="bottom_form">
        If you would like to know more about, or think you might like to adopt, {{listingName}},
        <button>Apply Online Now</button>
        or email us at: <a
          data-email="adopt+{{listing.id}}">Adopt {{listingName}}!</a>
        <!-- TODO: Make this work again -->
        <input type="hidden" name="pet" value="{{listing.id}}" id="hidden_id">
      </form>
    {{/unless}}
  </section>
</article>
{{>footer}}
<script src="/add_hidden.js"></script>
</html>
