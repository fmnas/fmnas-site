
RewriteEngine On
# @todo enforce https when cert problem resolved
#RewriteCond %{HTTPS} !=on
#RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=308]
#TODO check behavior on IE11 on Win7

# @todo why is this commented
# allow access to directories without trailing slash
Options -Indexes
DirectorySlash Off
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteCond %{REQUEST_FILENAME}/index.php -f
RewriteRule (.*) $1/index.php [L]

# redirect old /Application to /application
Redirect 301 /Application /application
RewriteRule ^Application/(.*)$ /application/$1 [L,R=301]

# redirect old /Cats to /cats
Redirect 301 /Cats /cats
RewriteRule ^Cats/(.*)$ /cats/$1 [L,R=301]

# redirect old /Dogs to /dogs
Redirect 301 /Dogs /dogs
RewriteRule ^Dogs/(.*)$ /dogs/$1 [L,R=301]

# redirect to handler.php for non-existing directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ /handler.php [L]

# compress text, html, javascript, css, xml:
AddOutputFilterByType DEFLATE text/plain
AddOutputFilterByType DEFLATE text/html
AddOutputFilterByType DEFLATE text/xml
AddOutputFilterByType DEFLATE text/css
AddOutputFilterByType DEFLATE application/xml
AddOutputFilterByType DEFLATE application/xhtml+xml
AddOutputFilterByType DEFLATE application/rss+xml
AddOutputFilterByType DEFLATE application/javascript
AddOutputFilterByType DEFLATE application/x-javascript

# @todo remove authentication from public site
# Temporary password protection for development
AuthName "Public Site"
AuthType Basic
AuthUserFile /home/kimgil5/newsite/secrets/.htpasswd
Require valid-user