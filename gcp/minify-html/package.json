		"@types/html-minifier": "^4.0.5",
		"@types/node": "^22.7.4",
		"@types/postcss-reporter": "^7.0.5",
		"@types/puppeteer": "^7.0.4",
		"concurrently": "^9.0.1",
		"gts": "^6.0.2",
		"nodemon": "^3.1.4",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"@fullhuman/postcss-purgecss": "^6.0.0",
		"@google-cloud/functions-framework": "^3.4.2",
		"busboy": "^1.6.0",
		"cssnano": "^7.0.6",
		"cssnano-preset-advanced": "^7.0.6",
