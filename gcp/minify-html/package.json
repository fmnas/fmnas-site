{
	"name": "minify-html",
	"version": "1.0.0",
	"description": "Google Cloud Function to minify a static HTML page",
	"main": "build/src/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"compile": "tsc",
		"pretest": "npm run compile",
		"start": "functions-framework --source=build/src/ --target=minify",
		"watch": "concurrently \"tsc -w\" \"nodemon --watch ./build/ --exec npm run start\""
	},
	"author": "",
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@types/busboy": "^1.5.0",
		"@types/cssnano": "^5.1.0",
		"@types/express": "^4.17.13",
		"@types/html-minifier": "^4.0.2",
		"@types/node": "^17.0.31",
		"@types/postcss-reporter": "^7.0.1",
		"@types/puppeteer": "^5.4.6",
		"concurrently": "^7.1.0",
		"gts": "^3.1.0",
		"nodemon": "^2.0.16",
		"typescript": "^4.6.4"
	},
	"dependencies": {
		"@fullhuman/postcss-purgecss": "^4.1.3",
		"@google-cloud/functions-framework": "^3.1.1",
		"busboy": "^1.6.0",
		"cssnano": "^5.1.7",
		"cssnano-preset-advanced": "^5.3.3",
		"html-entities": "^2.3.3",
		"html-minifier": "^4.0.0",
