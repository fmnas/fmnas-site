		"@types/html-minifier": "^4.0.2",
		"@types/node": "^20.5.7",
		"@types/postcss-reporter": "^7.0.1",
		"@types/puppeteer": "^5.4.5",
		"concurrently": "^8.2.1",
		"gts": "^5.0.0",
		"nodemon": "^3.0.1",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"@fullhuman/postcss-purgecss": "^5.0.0",
		"@google-cloud/functions-framework": "^3.3.0",
		"busboy": "^1.6.0",
		"cssnano": "^6.0.1",
		"cssnano-preset-advanced": "^6.0.1",
		"html-entities": "^2.4.0",
