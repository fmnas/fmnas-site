		"@types/html-minifier": "^4.0.2",
		"@types/node": "^18.11.18",
		"@types/postcss-reporter": "^7.0.1",
		"@types/puppeteer": "^5.4.5",
		"concurrently": "^7.6.0",
		"gts": "^3.1.1",
		"nodemon": "^2.0.20",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"@fullhuman/postcss-purgecss": "^5.0.0",
		"@google-cloud/functions-framework": "^3.1.2",
		"busboy": "^1.6.0",
		"cssnano": "^5.1.14",
		"cssnano-preset-advanced": "^5.3.9",
