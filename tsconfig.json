{
	"extends": "./node_modules/@tsconfig/node-lts/tsconfig.json",
	"ts-node": {
		"files": true,
		"compilerOptions": {
			"target": "es2021",
			"module": "commonjs",
			"lib": [
				"es2021"
			]
		}
	},
	"compilerOptions": {
		"target": "es2021",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env",
			"vite/client",
			"node"
		],
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable",
			"ScriptHost"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.vue"
	],
	"exclude": [
		"node_modules",
		"public",
		"functions"
	]
}
