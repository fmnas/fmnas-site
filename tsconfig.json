{
	"extends": "@tsconfig/node16/tsconfig.json",
	"ts-node": {
		"files": true,
	},
	"compilerOptions": {
		"target": "es2015",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env",
			"vite/client",
		],
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable",
			"ScriptHost"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.vue",
	],
	"exclude": [
		"node_modules",
		"public",
	]
}
